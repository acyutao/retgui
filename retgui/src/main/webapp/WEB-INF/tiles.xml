<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

		
	<!-- 页面模板 -->
	<definition name="basetemplate" template="/WEB-INF/views/public/base.jsp">
		<put-attribute name="meta" value="/WEB-INF/views/public/meta.jsp"></put-attribute>
		<put-attribute name="css" value="/WEB-INF/views/public/css.jsp"></put-attribute>
		<put-attribute name="short-icon"
			value="/WEB-INF/views/public/short_icon.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/public/header.jsp"></put-attribute>
		<put-attribute name="sidebar" value="/WEB-INF/views/public/sidebar.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/public/footer.jsp"></put-attribute>
		<put-attribute name="script" value="/WEB-INF/views/public/script.jsp"></put-attribute>

	</definition>
	
	
	<!-- 首页 -->
	<definition name="index" extends="basetemplate">
		<put-attribute name="page-css" value="/WEB-INF/views/index_css.jsp"></put-attribute>
		<put-attribute name="page" value="/WEB-INF/views/index.jsp"></put-attribute>
		<put-attribute name="page-script" value="/WEB-INF/views/index_script.jsp"></put-attribute>
	</definition>
	
	<!-- 首页 -->
	<definition name="retDetail" extends="basetemplate">
		<put-attribute name="page-css" value="/WEB-INF/views/ret/detail_css.jsp"></put-attribute>
		<put-attribute name="page" value="/WEB-INF/views/ret/detail.jsp"></put-attribute>
		<put-attribute name="page-script" value="/WEB-INF/views/ret/detail_script.jsp"></put-attribute>
	</definition>
	

</tiles-definitions>